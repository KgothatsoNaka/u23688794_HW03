@model u23688794_HW03.Models.HomeViewModel
@using System.Linq

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";

    // This is for the page navigation
    var staffPage = Request.QueryString["staffPage"] != null ? int.Parse(Request.QueryString["staffPage"]) : 1;
    var customerPage = Request.QueryString["customerPage"] != null ? int.Parse(Request.QueryString["customerPage"]) : 1;
    var productPage = Request.QueryString["productPage"] != null ? int.Parse(Request.QueryString["productPage"]) : 1;


    var staffPageSize = 5;
    var customerPageSize = 5;
    var productPageSize = 12;


    var staffStartIndex = (staffPage - 1) * staffPageSize;
    var staffEndIndex = Math.Min(staffStartIndex + staffPageSize, Model.StaffList.Count);

    var customerStartIndex = (customerPage - 1) * customerPageSize;
    var customerEndIndex = Math.Min(customerStartIndex + customerPageSize, Model.CustomerList.Count);

    var productStartIndex = (productPage - 1) * productPageSize;
    var productEndIndex = Math.Min(productStartIndex + productPageSize, Model.ProductList.Count);


    var totalStaffPages = (int)Math.Ceiling((double)Model.StaffList.Count / staffPageSize);
    var totalCustomerPages = (int)Math.Ceiling((double)Model.CustomerList.Count / customerPageSize);
    var totalProductPages = (int)Math.Ceiling((double)Model.ProductList.Count / productPageSize);
}

@functions {
    public string GetProductImageUrl(string brandName)
    {
        var imageMappings = new Dictionary<string, string[]> {
            { "Trek", new [] { "/Images/Trek_Marlin_bike.jpeg", "/Images/Trek_Xcaliber_bike.jpeg" } },
            { "Haro", new [] { "/Images/Haro_Bike1.jpeg", "/Images/Haro_mountain_bike.jpeg" } },
            { "Heller", new [] { "/Images/Heler_bike2.jpeg", "/Images/Heller_bike1.jpeg" } },
            { "Sun Bicycles", new [] { "/Images/Sun_bicycle_retro.jpeg", "/Images/Sun_Bicycle1.jpeg" } },
            { "Surly", new [] { "/Images/Surly_bike.jpeg", "/Images/Surly_preamble_bike.jpeg" } },
            { "Electra", new [] { "/Images/Electra_Cruiser.jpeg", "/Images/Electra_Cruiser 1.jpeg" } },
            { "Strider", new [] { "/Images/Strider_balance_bike1.jpeg", "/Images/Strider_sport_bike.jpeg" } },
            { "Ritchey", new [] { "/Images/Ritchey_bike2.jpeg", "/Images/Riychey_bike1.jpeg" } },
            { "Pure Cycles", new [] { "/Images/Pure_Cycles1.jpeg", "/Images/Pure_Cycles2.jpeg" } }
};

        if (imageMappings.ContainsKey(brandName))
        {
            // Always use the first image, or you can randomize:
            var random = new Random().Next(0, 2);
            return imageMappings[brandName][random];
        }

        return "/Images/default.jpg"; 

    }

}

