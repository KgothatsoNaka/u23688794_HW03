<div class="container">
    <!-- Header Section -->
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h1 class="page-title">BlkeStores - Bicycle Sales Management</h1>
                <p class="page-subtitle">Comprehensive bicycle sales management solution</p>
            </div>
        </div>
    </div>

    <!-- Staff Section -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Staff Members</h3>
                    <a href="@Url.Action("Create", "staffs")" class="btn">Create New Staff</a>
                </div>
                <div class="card-body">
                    @if (Model.StaffList.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Store</th>
                                        <th>Manager</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = staffStartIndex; i < staffEndIndex; i++)
                                    {
                                        var staff = Model.StaffList[i];
                                        string managerName = "None";

                                        foreach (var potentialManager in Model.StaffList)
                                        {
                                            if (potentialManager.staff_id == staff.manager_id)
                                            {
                                                managerName = $"{potentialManager.first_name} {potentialManager.last_name}";
                                                break;
                                            }
                                        }

                                        <tr>
                                            <td>@staff.first_name @staff.last_name</td>
                                            <td>@staff.email</td>
                                            <td>@staff.phone</td>
                                            <td>@(staff.stores?.store_name ?? "N/A")</td>
                                            <td>@managerName</td>
                                            <td>
                                                <span class="badge @(staff.active == 1 ? "status-badge-active" : "status-badge-inactive")">
                                                    @(staff.active == 1 ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        if (totalStaffPages > 1)
                        {
                            <nav aria-label="Staff pagination" class="pageSelect-container">
                                <ul class="pageSelect">
                                    @for (int i = 1; i <= totalStaffPages; i++)
                                    {
                                        <li class="pageSelect-item @(i == staffPage ? "active" : "")">
                                            @if (i == staffPage)
                                            {
                                                <span class="pageSelect-link">@i</span>
                                            }
                                            else
                                            {
                                                <a class="pageSelect-link"
                                                   href="?staffPage=@i&customerPage=@customerPage&productPage=@productPage&brandFilter=@Model.SelectedBrand&categoryFilter=@Model.SelectedCategory">
                                                    @i
                                                </a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Customers Section -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Customers</h3>
                    <a href="@Url.Action("Create", "customers")" class="btn">Create New Customer</a>
                </div>
                <div class="card-body">
                    @if (Model.CustomerList.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>State</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = customerStartIndex; i < customerEndIndex; i++)
                                    {
                                        var customer = Model.CustomerList[i];
                                        <tr>
                                            <td>@customer.first_name @customer.last_name</td>
                                            <td>@customer.email</td>
                                            <td>@(string.IsNullOrEmpty(customer.phone) ? "N/A" : customer.phone)</td>
                                            <td>@customer.street</td>
                                            <td>@customer.city</td>
                                            <td>@customer.state</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        if (totalCustomerPages > 1)
                        {
                            <nav aria-label="Customer pagination" class="pageSelect-container">
                                <ul class="pageSelect">
                                    @for (int i = 1; i <= totalCustomerPages; i++)
                                    {
                                        <li class="pageSelect-item @(i == customerPage ? "active" : "")">
                                            @if (i == customerPage)
                                            {
                                                <span class="pageSelect-link">@i</span>
                                            }
                                            else
                                            {
                                                <a class="pageSelect-link"
                                                   href="?staffPage=@staffPage&customerPage=@i&productPage=@productPage&brandFilter=@Model.SelectedBrand&categoryFilter=@Model.SelectedCategory">
                                                    @i
                                                </a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Products Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Products (Bicycles)</h3>
                </div>
                <div class="card-body">
                    <!-- Filter Section -->
                    <div class="filter-section">
                        <div class="row">
                            <div class="col-md-8">
                                @using (Html.BeginForm("Index", "BikeStore", FormMethod.Get, new { @class = "row", @id = "filterForm" }))
                                {
                                    <input type="hidden" name="staffPage" value="@staffPage" />
                                    <input type="hidden" name="customerPage" value="@customerPage" />
                                    <input type="hidden" name="productPage" value="@productPage" />

                                    <div class="col-md-4 filter-form-group">
                                        <label for="brandFilter" class="filter-label">Filter by Brand:</label>
                                        <select class="form-control" id="brandFilter" name="brandFilter">
                                            <option value="">All Brands</option>
                                            @foreach (var brand in Model.Brands)
                                            {
                                                <option value="@brand"
                                                        @(brand == Model.SelectedBrand ? "selected" : "")>
                                                    @brand
                                                </option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 filter-form-group">
                                        <label for="categoryFilter" class="filter-label">Filter by Category:</label>
                                        <select class="form-control" id="categoryFilter" name="categoryFilter">
                                            <option value="">All Categories</option>
                                            @foreach (var category in Model.Categories)
                                            {
                                                <option value="@category"
                                                        @(category == Model.SelectedCategory ? "selected" : "")>
                                                    @category
                                                </option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 filter-form-group d-flex align-items-end">
                                        <div class="btn-group filter-button-group">
                                            <button type="submit" class="btn btn-primary">Apply Filters</button>
                                            <button type="button" class="btn btn-outline-secondary" onclick="resetFilters()">Clear</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    @if (Model.ProductList.Count > 0)
                    {
                        <div class="row">
                            @for (int i = productStartIndex; i < productEndIndex; i++)
                            {
                                var product = Model.ProductList[i];
                                var imageUrl = GetProductImageUrl(product.BrandName);

                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="card product-card h-100">
                                        <div class="card-img-container">
                                            <img src="@imageUrl" class="product-image" alt="@product.product_name"
                                                 onerror="this.src='/Images/Bikes/default.jpg'">
                                        </div>
                                        <div class="card-body">
                                            <h5 class="product-title">@product.product_name</h5>
                                            <div class="product-details">
                                                <p class="mb-1"><strong>Brand:</strong> @product.BrandName</p>
                                                <p class="mb-1"><strong>Category:</strong> @product.CategoryName</p>
                                                <p class="mb-1"><strong>Year:</strong> @product.model_year</p>
                                            </div>
                                            <div class="product-price">@product.list_price.ToString("C")</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        if (totalProductPages > 1)
                        {
                            <nav aria-label="Product pagination" class="pageSelect-container">
                                <ul class="pageSelect">
                                    @for (int i = 1; i <= totalProductPages; i++)
                                    {
                                        <li class="pageSelect-item @(i == productPage ? "active" : "")">
                                            @if (i == productPage)
                                            {
                                                <span class="pageSelect-link">@i</span>
                                            }
                                            else
                                            {
                                                <a class="pageSelect-link"
                                                   href="?staffPage=@staffPage&customerPage=@customerPage&productPage=@i&brandFilter=@Model.SelectedBrand&categoryFilter=@Model.SelectedCategory">
                                                    @i
                                                </a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function resetFilters() {
            var baseUrl = '@Url.Action("Index", "BikeStore")';
            var params = new URLSearchParams(window.location.search);

            params.delete('brandFilter');
            params.delete('categoryFilter');

            var staffPage = params.get('staffPage') || '1';
            var customerPage = params.get('customerPage') || '1';
            var productPage = params.get('productPage') || '1';

            window.location.href = baseUrl + '?staffPage=' + staffPage + '&customerPage=' + customerPage + '&productPage=' + productPage;
        }

    </script>
}