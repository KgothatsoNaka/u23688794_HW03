@model u23688794_HW03.Models.HomeViewModel
@using System.Linq

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";

    // Get current page numbers from query string or default to 1
    var staffPage = Request.QueryString["staffPage"] != null ? int.Parse(Request.QueryString["staffPage"]) : 1;
    var customerPage = Request.QueryString["customerPage"] != null ? int.Parse(Request.QueryString["customerPage"]) : 1;
    var productPage = Request.QueryString["productPage"] != null ? int.Parse(Request.QueryString["productPage"]) : 1;

    // Set page sizes
    var staffPageSize = 5;
    var customerPageSize = 5;
    var productPageSize = 10;

    // Calculate paged data
    var staffStartIndex = (staffPage - 1) * staffPageSize;
    var staffEndIndex = Math.Min(staffStartIndex + staffPageSize, Model.StaffList.Count);

    var customerStartIndex = (customerPage - 1) * customerPageSize;
    var customerEndIndex = Math.Min(customerStartIndex + customerPageSize, Model.CustomerList.Count);

    var productStartIndex = (productPage - 1) * productPageSize;
    var productEndIndex = Math.Min(productStartIndex + productPageSize, Model.ProductList.Count);

    // Calculate total pages
    var totalStaffPages = (int)Math.Ceiling((double)Model.StaffList.Count / staffPageSize);
    var totalCustomerPages = (int)Math.Ceiling((double)Model.CustomerList.Count / customerPageSize);
    var totalProductPages = (int)Math.Ceiling((double)Model.ProductList.Count / productPageSize);
}

@section Styles {
    <style>
        /* Header Styles */
        .page-header {
            margin-bottom: 2rem;
        }

        .page-title {
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: #6c757d;
            font-size: 1.25rem;
        }

        /* Card Styles */
        .section-card {
            margin-bottom: 2rem;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header-primary {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        }

        .card-header-success {
            background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
        }

        .card-header-info {
            background: linear-gradient(135deg, #17a2b8 0%, #117a8b 100%);
        }

        /* Table Styles */
        .data-table {
            width: 100%;
            border-collapse: collapse;
        }

        .data-table thead th {
            border-bottom: 2px solid #dee2e6;
            font-weight: 600;
        }

        .table-responsive-container {
            overflow-x: auto;
        }

        /* Badge Styles */
        .count-badge {
            font-size: 0.875rem;
            padding: 0.25rem 0.5rem;
        }

        .status-badge-active {
            background-color: #28a745;
            color: white;
        }

        .status-badge-inactive {
            background-color: #6c757d;
            color: white;
        }

        /* Button Styles */
        .action-button {
            transition: all 0.2s ease-in-out;
        }

        .action-button:hover {
            transform: translateY(-1px);
        }

        .filter-button-group {
            width: 100%;
        }

        /* Pagination Styles */
        .pagination-container {
            margin-top: 1.5rem;
        }

        .pagination-item.active .pagination-link {
            background-color: #007bff;
            border-color: #007bff;
        }

        /* Alert Styles */
        .empty-state {
            text-align: center;
            padding: 2rem;
        }

        .empty-state-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        /* Filter Section */
        .filter-section {
            margin-bottom: 1.5rem;
            padding: 1rem;
            background-color: #f8f9fa;
            border-radius: 0.375rem;
        }

        .filter-form-group {
            margin-bottom: 1rem;
        }

        .filter-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: block;
        }

        /* Modal Styles */
        .modal-header-gradient {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        }

        .modal-placeholder {
            text-align: center;
            padding: 2rem;
        }

        .modal-placeholder-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.3;
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .page-title {
                font-size: 1.5rem;
            }

            .page-subtitle {
                font-size: 1rem;
            }

            .filter-form-group {
                margin-bottom: 1rem;
            }
        }
    </style>
}











<div class="container-fluid">
    <!-- Header Section -->
    <div class="row">
        <div class="col-12">
            <div class="page-header text-center">
                <h1 class="page-title">BlkeStores - Bicycle Sales Management</h1>
                <p class="page-subtitle">Comprehensive bicycle sales management solution</p>
            </div>
        </div>
    </div>

    <!-- Staff Section -->
    <div class="row">
        <div class="col-12">
            <div class="card section-card">
                <div class="card-header card-header-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-users mr-2"></i>Staff Members
                        <span class="badge count-badge badge-light text-primary ml-2">@Model.StaffList.Count</span>
                    </h3>
                    <a href="@Url.Action("Create", "staffs")" class="btn btn-light btn-sm">
                        <i class="fas fa-plus"></i> Create New Staff
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.StaffList.Count > 0)
                    {
                        <div class="table-responsive-container">
                            <table class="table data-table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Store</th>
                                        <th>Manager</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = staffStartIndex; i < staffEndIndex; i++)
                                    {
                                        var staff = Model.StaffList[i];
                                        string managerName = "None";

                                        foreach (var potentialManager in Model.StaffList)
                                        {
                                            if (potentialManager.staff_id == staff.manager_id)
                                            {
                                                managerName = $"{potentialManager.first_name} {potentialManager.last_name}";
                                                break;
                                            }
                                        }

                                        <tr>
                                            <td>@staff.first_name @staff.last_name</td>
                                            <td>@staff.email</td>
                                            <td>@staff.phone</td>
                                            <td>@(staff.stores?.store_name ?? "N/A")</td>
                                            <td>@managerName</td>
                                            <td>
                                                <span class="badge @(staff.active == 1 ? "status-badge-active" : "status-badge-inactive")">
                                                    @(staff.active == 1 ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        if (totalStaffPages > 1)
                        {
                            <nav aria-label="Staff pagination" class="pagination-container">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= totalStaffPages; i++)
                                    {
                                        <li class="page-item pagination-item @(i == staffPage ? "active" : "")">
                                            @if (i == staffPage)
                                            {
                                                <span class="page-link pagination-link">@i</span>
                                            }
                                            else
                                            {
                                                <a class="page-link pagination-link"
                                                   href="?staffPage=@i&customerPage=@customerPage&productPage=@productPage&brandFilter=@Model.SelectedBrand&categoryFilter=@Model.SelectedCategory">
                                                    @i
                                                </a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                </div>
            </div>
        </div>
    </div>








    <!-- Customers Section -->
    <div class="row">
        <div class="col-12">
            <div class="card section-card">
                <div class="card-header card-header-success text-white d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-friends mr-2"></i>Customers
                        <span class="badge count-badge badge-light text-success ml-2">@Model.CustomerList.Count</span>
                    </h3>
                    <a href="@Url.Action("Create", "customers")" class="btn btn-light btn-sm">
                        <i class="fas fa-plus"></i> Create New Customer
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.CustomerList.Count > 0)
                    {
                        <div class="table-responsive-container">
                            <table class="table data-table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>State</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = customerStartIndex; i < customerEndIndex; i++)
                                    {
                                        var customer = Model.CustomerList[i];
                                        <tr>
                                            <td>@customer.first_name @customer.last_name</td>
                                            <td>@customer.email</td>
                                            <td>@(string.IsNullOrEmpty(customer.phone) ? "N/A" : customer.phone)</td>
                                            <td>@customer.street</td>
                                            <td>@customer.city</td>
                                            <td>@customer.state</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        if (totalCustomerPages > 1)
                        {
                            <nav aria-label="Customer pagination" class="pagination-container">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= totalCustomerPages; i++)
                                    {
                                        <li class="page-item pagination-item @(i == customerPage ? "active" : "")">
                                            @if (i == customerPage)
                                            {
                                                <span class="page-link pagination-link">@i</span>
                                            }
                                            else
                                            {
                                                <a class="page-link pagination-link"
                                                   href="?staffPage=@staffPage&customerPage=@i&productPage=@productPage&brandFilter=@Model.SelectedBrand&categoryFilter=@Model.SelectedCategory">
                                                    @i
                                                </a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                </div>
            </div>
        </div>
    </div>









    <!-- Products Section -->
    <div class="row">
        <div class="col-12">
            <div class="card section-card">
                <div class="card-header card-header-info text-white d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-bicycle mr-2"></i>Products (Bicycles)
                        <span class="badge count-badge badge-light text-info ml-2">@Model.ProductList.Count</span>
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Filter Section -->
                    <div class="filter-section">
                        <div class="row">
                            <div class="col-md-8">
                                @using (Html.BeginForm("Index", "BikeStore", FormMethod.Get, new { @class = "row", @id = "filterForm" }))
                                {
                                    <input type="hidden" name="staffPage" value="@staffPage" />
                                    <input type="hidden" name="customerPage" value="@customerPage" />
                                    <input type="hidden" name="productPage" value="@productPage" />

                                    <div class="col-md-4 filter-form-group">
                                        <label for="brandFilter" class="filter-label">Filter by Brand:</label>
                                        <select class="form-control" id="brandFilter" name="brandFilter">
                                            <option value="">All Brands</option>
                                            @foreach (var brand in Model.Brands)
                                            {
                                                <option value="@brand" selected="@(brand == Model.SelectedBrand)">@brand</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 filter-form-group">
                                        <label for="categoryFilter" class="filter-label">Filter by Category:</label>
                                        <select class="form-control" id="categoryFilter" name="categoryFilter">
                                            <option value="">All Categories</option>
                                            @foreach (var category in Model.Categories)
                                            {
                                                <option value="@category" selected="@(category == Model.SelectedCategory)">@category</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 filter-form-group d-flex align-items-end">
                                        <div class="btn-group filter-button-group">
                                            <button type="submit" class="btn btn-primary action-button">
                                                <i class="fas fa-filter mr-1"></i>Apply Filters
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary action-button" onclick="resetFilters()">
                                                <i class="fas fa-times mr-1"></i>Clear
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    @if (Model.ProductList.Count > 0)
                    {
                        <div class="table-responsive-container">
                            <table class="table data-table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Brand</th>
                                        <th>Category</th>
                                        <th>Model Year</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = productStartIndex; i < productEndIndex; i++)
                                    {
                                        var product = Model.ProductList[i];
                                        <tr>
                                            <td>@product.product_name</td>
                                            <td>@product.BrandName</td>
                                            <td>@product.CategoryName</td>
                                            <td>@product.model_year</td>
                                            <td class="font-weight-bold text-success">@product.list_price.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        if (totalProductPages > 1)
                        {
                            <nav aria-label="Product pagination" class="pagination-container">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= totalProductPages; i++)
                                    {
                                        <li class="page-item pagination-item @(i == productPage ? "active" : "")">
                                            @if (i == productPage)
                                            {
                                                <span class="page-link pagination-link">@i</span>
                                            }
                                            else
                                            {
                                                <a class="page-link pagination-link"
                                                   href="?staffPage=@staffPage&customerPage=@customerPage&productPage=@i&brandFilter=@Model.SelectedBrand&categoryFilter=@Model.SelectedCategory">
                                                    @i
                                                </a>
                                            }
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        function resetFilters() {
            var baseUrl = '@Url.Action("Index", "BikeStore")';
            var params = new URLSearchParams(window.location.search);

            params.delete('brandFilter');
            params.delete('categoryFilter');

            var staffPage = params.get('staffPage') || '1';
            var customerPage = params.get('customerPage') || '1';
            var productPage = params.get('productPage') || '1';

            window.location.href = baseUrl + '?staffPage=' + staffPage + '&customerPage=' + customerPage + '&productPage=' + productPage;
        }
    </script>
}